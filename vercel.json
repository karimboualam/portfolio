{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },               // API
    { "src": "^(?!/api/)(.*\\..*)$", "dest": "/$1" },          // laisser passer les fichiers (js, css, pngâ€¦)
    { "src": "^(?!/api/).*$", "dest": "/index.html" }          // SPA fallback
  ]
}
